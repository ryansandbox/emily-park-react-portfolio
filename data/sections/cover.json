        {
            "id": 2,
            "component": "ArticleText",
            "locales": {
                "en": {"title": "{{A little bit}} about me..."},
                "it": {"title": "{{Un po'}} su di me..."},
                "ko": {"title": "{{저에 대해}} 조금..."},
                "zh": {"title": "{{关于我}}的一点点..."}
            },
            "settings": {
                "order_items_by": "id",
